<Window x:Class="Kurs_first.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Kurs_first"
        mc:Ignorable="d"
        Title="Postcard" Height="450" Width="800">
    <Grid x:Name="MyGrid">
        <Image x:Name="photo" Source="D:\Programming\Visual Studio\C#\University\Kurs_first\christmas-tree2.png" Stretch="UniformToFill" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

        <Canvas x:Name="MyCanvas" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
